<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fillViewport="true">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/edit_profile"
        android:textSize="23sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_bar"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp" />


    <EditText
        android:id="@+id/et_linkedin"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bar"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/linked_in"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/et_about"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bar"
        android:drawableStart="@drawable/ic_baseline_menu_book_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/about"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/tv_skills"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_linkedin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bar"
        android:drawablePadding="20dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/skills"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/ic_baseline_add_24"
        app:drawableStartCompat="@drawable/ic_baseline_library_books_24" />

    <ListView
        android:id="@+id/lv_skills"
        android:layout_width="338dp"
        android:layout_height="220dp"
        android:layout_below="@+id/tv_skills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_bg" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lv_skills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg"
        android:text="@string/confirm"
        android:textSize="20sp" />

</RelativeLayout>